from flask import Flask, request
import requests
import os

app = Flask(__name__)

TELEGRAM_BOT_TOKEN = os.environ.get("TELEGRAM_BOT_TOKEN")  # задаётся в Vercel
ADMIN_CHAT_ID = os.environ.get("ADMIN_CHAT_ID")  # задаётся в Vercel

@app.route("/send_order", methods=["POST"])
def send_order():
    data = request.json
    order_text = data.get("order")
    if order_text:
        url = f"https://api.telegram.org/bot{TELEGRAM_BOT_TOKEN}/sendMessage"
        requests.post(url, data={"chat_id": ADMIN_CHAT_ID, "text": order_text})
        return {"status":"ok"}
    return {"status":"error"},400

if __name__=="__main__":
    app.run()
